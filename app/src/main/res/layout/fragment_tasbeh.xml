<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/mainbackground"
    >

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrowdown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navgtion_tabe7"

        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_a3line"
        app:layout_constraintBottom_toTopOf="@id/navgtion_tabe7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="المسبحة الالكترونية"
        android:gravity="center"
        android:padding="20sp"
        android:textSize="30sp"
        android:textColor="@color/gold"
        android:textStyle="bold"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/navgtion_tabe7"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:menu="@menu/title_menu"
    app:itemIconSize="30sp"
    app:itemTextColor="@color/navigate_tasbe7"
    app:itemIconTint="@color/navigate_tasbe7"
    android:background="@color/brawon"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
        android:id="@+id/ad2ya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/navgtion_tabe7"
        android:text="شريط : ادعية"
        android:textColor="@color/gold"
        android:textSize="30sp"
        android:background="@color/brawon2"
        />

    <Button
        android:id="@+id/refrach"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="@drawable/ic_refrach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasb7"
        />

    <ImageView
        android:id="@+id/tasb7"
        android:layout_width="154dp"
        android:layout_height="122dp"
        android:adjustViewBounds="true"
        android:src="@drawable/tasbih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad2ya" />

    <TextView
        android:id="@+id/tsbeha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التسبيحة"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refrach"
        android:textSize="25sp"
        android:layout_marginEnd="30sp"
        />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مجموع التسبيحات"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30sp"
        app:layout_constraintTop_toBottomOf="@id/refrach" />


    <TextView
        android:id="@+id/tasb7nmber"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tsbeha"
        android:textStyle="bold"
        tools:text="0"
        android:hint="0"
        android:layout_marginEnd="20sp"
        android:textSize="20sp"
        android:background="@color/gold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tsbeha"

        />
    <TextView
        android:id="@+id/totalNumber"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10sp"
        android:background="@color/gold"
        android:gravity="center"
        android:textColor="@color/white"
        android:hint="0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/total"
        app:layout_constraintStart_toStartOf="@id/total"
        app:layout_constraintTop_toBottomOf="@id/total"
        tools:text="0"
        />

    <Spinner
        android:theme="@style/mySpinnerItemStyle"
        android:id="@+id/spannertasb7at"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:entries="@array/tasb7at"
        android:gravity="center"
        android:background="@color/gold"
        android:padding="15sp"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalNumber" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="@id/spannertasb7at"
        app:layout_constraintTop_toBottomOf="@id/spannertasb7at"
        app:layout_constraintTop_toTopOf="@id/spannertasb7at"
        android:layout_margin="10sp"

        />

    <TextView
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:text="منطقه اعلانيه "
        android:textColor="@color/white"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20sp"
        app:layout_constraintTop_toBottomOf="@+id/spannertasb7at" />


</androidx.constraintlayout.widget.ConstraintLayout>