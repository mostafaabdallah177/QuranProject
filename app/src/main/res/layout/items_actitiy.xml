<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/soura_items"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:layout_marginStart="18sp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="40sp"
        android:src="@drawable/item_quraan_name_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/souraName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الفاتحه"
        android:fontFamily="@font/quran"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/soura_items"
        app:layout_constraintEnd_toEndOf="@id/soura_items"
        app:layout_constraintStart_toStartOf="@id/soura_items"
        app:layout_constraintTop_toTopOf="@id/soura_items" />
</androidx.constraintlayout.widget.ConstraintLayout>